# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                        controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file            controllers.Assets.at(path="/public", file)

# New map page (should this be POST?)
GET        /new                     controllers.Application.newMap

# Specific writable server-stored map
GET        /editmaps/:mapId             controllers.Application.getMap(mapId)

# Save latest map data (should this be PUT? need a timestamp in that case)
GET        /editmaps/:mapId/save        controllers.Application.saveMap(mapId, cmdId, cmd, content)

# Load writable map data
GET        /editmaps/:mapId/load        controllers.Application.loadMap(mapId)

# Get URL to readonly version of map
GET        /editmaps/:mapId/readonly    controllers.Application.getReadOnlyURL(mapId)

# Specific readable server-stored map
GET        /maps/:mapId             controllers.Application.getReadOnlyMap(mapId)

# Load readable map data
GET        /maps/:mapId/load        controllers.Application.loadReadOnlyMap(mapId)

